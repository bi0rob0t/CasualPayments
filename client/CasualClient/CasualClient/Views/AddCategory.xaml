<Window x:Class="CasualClient.ViewModels.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasualClient.ViewModels"
        mc:Ignorable="d"
        Title="AddCategory" Height="200" Width="200">
    <Window.DataContext>
        <local:AddCategoryVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding CategoryName}" Margin="0,8,0,7" Height="Auto"></TextBox>
        <Button Content="Добавить" Grid.Row="2" Margin="10, 10, 10, 0" 
                Command="{Binding AddCategory}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
    </Grid>


</Window>
